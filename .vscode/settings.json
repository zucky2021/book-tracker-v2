{
  "editor.tabSize": 2,
  "cSpell.words": [
    "coderabbit",
    "noopener",
    "noreferrer",
    "peaceiris",
    "usecase",
    "VITE"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "togglequotes.chars": ["\"", "'", "`"],
  "files.autoSave": "afterDelay",
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "boundary",
  "indentRainbow.indentSetter": {
    "[json]": 2,
    "[go": 2
  },
  "[go]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.defaultFormatter": "golang.go"
  },
  "go.useLanguageServer": true, // Go言語サーバーを有効化
  "go.buildOnSave": "workspace", // 保存時にビルドを実行
  "go.vetOnSave": "workspace", // 保存時にvetを実行
  "go.toolsManagement.autoUpdate": true, // Goツールを自動更新
  "go.formatTool": "goimports", // フォーマットツールを指定
  "go.lintTool": "golangci-lint", // Lintツールを指定
  "gopls": {
    "ui.semanticTokens": true, // セマンティックトークンを有効化
    "staticcheck": true, // 静的解析ツール staticcheck を有効化
    "hoverKind": "FullDocumentation", // ホバー時に完全なドキュメント表示
  },
  "postman.settings.dotenv-detection-notification-visibility": false
}
